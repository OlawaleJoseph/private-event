<h1>Events#create</h1>

<%= form_with(model: @event, local: true) do |form| %>
  <% check_errors(@event) %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :event_date %>
    <%= form.date_field :event_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

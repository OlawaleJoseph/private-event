<h1>Events#index</h1>
<p>Find me in app/views/events/index.html.erb</p>


<% @events.each do |event| %>
    <div>
      <ul>
        <li> <strong> <%= event.title %> </strong> </li>
        <li> <%= event.description %> </li>
        <li> <%= event.location %> </li>
        <li> <%= event.event_date.strftime("%B %d, %Y") %> </li>
        <li>By: <%= event.creator.to_s %> </li>
      </ul>
      <% if current_user %>
        <%= form_for(event) do |f| %>
             <%# Attend?<%= check_box_tag "event[user_ids][]", current_user, event.users.include?(current_user) %> %>

            <div class="actions">
            <%= f.submit %>
              </div>

         <% end %>
         <% end %>
      <br>
    </div>

  <% end %>
